{
  "compilerOptions": {
    "target": "es2016",
    "lib": [
      "es5",
      "dom",
      "es2015.promise"
    ],
    "module": "es2020",
    "moduleResolution": "node",
    "baseUrl": "./",
    "types": [
      "cypress",
      "node",
      "vite/client",
      "@types/jest",
    ],
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "**/*.ts",
    "vue-shim.d.ts"
  ]
}
